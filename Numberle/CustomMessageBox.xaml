<Window x:Class="Numberle.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Message Box" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock x:Name="MessageText" Text="Jaki typ gry chcesz zagrać?" FontSize="24" TextWrapping="Wrap" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="Button1" Content="Dzienny" Width="75" Margin="5" FontSize="16" Click="Daily_Click" />
            <Button x:Name="Button2" Content="Losowy" Width="75" Margin="5" FontSize="16" Click="Random_Click" />
        </StackPanel>
    </Grid>
</Window>
